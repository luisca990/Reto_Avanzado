<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayBack"
    android:layout_gravity="center"
    android:paddingTop="@dimen/_16dp"
    tools:context=".Presentation.Dash.ManageProduct.AddUpdate.Implementations.AddUpdateFragment">

    <LinearLayout
        android:id="@+id/ll_title"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_16dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/iv_back_add_update"
            android:layout_width="@dimen/_80dp"
            android:layout_height="@dimen/_80dp"
            android:src="@mipmap/ic_logo_return_purple"/>
        <TextView
            android:id="@+id/tv_title_add_update"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="@string/agregar_producto"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_30sp"
            android:textStyle="bold" />
        <ImageView
            android:layout_width="@dimen/_80dp"
            android:layout_height="@dimen/_80dp"
            android:layout_marginStart="@dimen/_10dp"
            android:src="@mipmap/ic_logo_appetit"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_16dp"
        android:layout_marginStart="@dimen/_16dp"
        android:layout_marginEnd="@dimen/_16dp"
        android:layout_marginBottom="@dimen/_35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardBackgroundColor="@color/blackyBack"
        app:cardCornerRadius="@dimen/_20dp"
        app:layout_constraintTop_toBottomOf="@+id/ll_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_20dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/cardImagen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                    <ImageView
                        android:id="@+id/iv_image_add_update"
                        android:layout_width="200dp"
                        android:layout_height="180dp"
                        android:importantForAccessibility="no"
                        android:src="@drawable/splash_pan_app" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/llAddUrlImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/_16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardImagen">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/imagen_url"
                    android:textColor="@color/white"
                    android:layout_marginBottom="@dimen/_8dp"
                    android:textSize="@dimen/_14sp"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/et_url"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/edt_back_white"
                    android:paddingStart="@dimen/_10dp"
                    android:hint="@string/value"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    tools:ignore="RtlSymmetry,TextFields" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llAddName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/_16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/llAddUrlImage">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name"
                    android:textColor="@color/white"
                    android:layout_marginBottom="@dimen/_8dp"
                    android:textSize="@dimen/_14sp"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/edt_back_white"
                    android:paddingStart="@dimen/_10dp"
                    android:hint="@string/value"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    tools:ignore="RtlSymmetry,TextFields" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llAddDescript"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/_16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/llAddName">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/descript"
                    android:textColor="@color/white"
                    android:layout_marginBottom="@dimen/_8dp"
                    android:textSize="@dimen/_14sp"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/et_descript"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:background="@drawable/edt_back_white"
                    android:paddingStart="@dimen/_10dp"
                    android:hint="@string/value"
                    android:importantForAutofill="no"
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:gravity="top"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:scrollbars="vertical"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llAddCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/llAddDescript">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="@dimen/_8dp"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/count"
                        android:textColor="@color/white"
                        android:layout_marginBottom="@dimen/_8dp"
                        android:textSize="@dimen/_14sp"
                        android:textStyle="bold"/>
                    <EditText
                        android:id="@+id/et_count"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/edt_back_white"
                        android:paddingStart="@dimen/_10dp"
                        android:hint="@string/value"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        tools:ignore="RtlSymmetry" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/precio_unitario"
                        android:textColor="@color/white"
                        android:layout_marginBottom="@dimen/_8dp"
                        android:textSize="@dimen/_14sp"
                        android:textStyle="bold"/>
                    <EditText
                        android:id="@+id/et_valor"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/edt_back_white"
                        android:paddingStart="@dimen/_10dp"
                        android:hint="@string/value"
                        android:importantForAutofill="no"
                        android:inputType="numberDecimal"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        tools:ignore="RtlSymmetry" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_add_update"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_25dp"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginEnd="@dimen/_16dp"
                android:background="@drawable/btn_purple"
                android:text="@string/save"
                android:textColor="@color/white"
                android:textSize="@dimen/_18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/llAddCount" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>